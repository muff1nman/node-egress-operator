pipeline {
    agent {
        node {
            label 'golang'
        }
    }
    stages {
        stage('Build go binary') {
            steps {
                sh """
                    #!/usr/bin/env bash \n
                    unset BASH_ENV PROMPT_COMMAND ENV && \
                    source scl_source enable go-toolset-7 && \
                    go get -d github.com/muff1nman/node-egress-operator/pkg/stub && \
                    cd \$HOME/go/src/tmp/github.com/muff1nman/node-egress-operator/build/build.sh
                    """
            }
        }
        stage('Apply OpenShift Build Objects') {
            steps {
                script {
                    openshift.withCluster() {
                        dir('openshift/build') {
                            openshift.apply(readFile('build.yml'))
                        }
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    openshift.withCluster() {
                        openshift.selector('bc', 'node-egress-operator').startBuild('--from-dir=$HOME/go/src/tmp/github.com/muff1nman/node-egress-operator/', '--wait')
                    }
                }
            }
        }
    }
}
// vim: ts=4:sw=4:expandtab
